.pattern{
  font-weight:600;
}

.border{
  border-color: darkturquoise;
}

.wrapX {
  padding: 20rpx;
}

.wrapOut {
      background-color: #FFEBDA;
      height: 60rpx;
      border-radius: 30rpx;
      overflow: hidden;
}

.wrapInner {
    overflow: hidden;  
     margin-left: 40rpx;
     margin-right: 40rpx;
}

.contant {
    font-weight: 300;
     line-height: 60rpx;
     white-space: nowrap;
     animation: remindMessage 20s linear infinite;
     width: 100%;
}

@keyframes remindMessage {
  0% {
    -webkit-transform: translateX(100%);
  }
        
  100% {
    -webkit-transform: translateX(-180%);
  }
}
      
  